// pending
fn pending(name: &[u8]) -> () {
    rstack.pending();
}


// bool
fn assert_bool(exp: bool, body: fn() -> bool) -> () {
    if exp == body() {
        rstack.passed();
    } else {
        rstack.failed();
    }
}

fn assert_true(body: fn() -> bool) -> () {
    assert_bool(true, body);
}

fn assert_false(body: fn() -> bool) -> () {
    assert_bool(false, body);
}
