fn facts(name: &[u8], body: fn() -> ()) -> () {
	print_string(name);
	print_string("\n");

	rstack.push();
	body();
	let results = rstack.pop();

	print_string("----------\n");
	print_string("Total facts: ");
	print_i32(results.passed + results.failed + results.pending);
	print_string("\n\n");
}

fn context(name: &[u8], body: fn() -> ()) -> () {
	print_string("  > ");
	print_string(name);
	print_string("\n");
	body();
}

fn fact() -> () {
	rstack.passed();
}
